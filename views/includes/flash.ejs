<% if(success && success.length > 0) { %>
    <div class="alert alert-success alert-dismissable fade show col-6 offset-3  d-flex justify-content-between" role="alert">
      <%= success %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>

<% if(error && error.length > 0) { %>
    <div class="alert alert-danger alert-dismissable fade show col-6 offset-3  d-flex justify-content-between" role="alert">
      <%= error %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>